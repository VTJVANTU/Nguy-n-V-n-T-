    cái này . gio = gio;
    cái này . phut = phut;
    cái này . giay = giay;        
    }
   
    void  nhap () {
        Quét máy quét =  Máy quét mới  ( Hệ thống . In);
      
        Hệ thống . ra ngoài . println ( " Nhap gio: " );
    
        Hệ thống . ra ngoài . println ( " Nhap phut: " );
        phut = quét . nextInt ();
       
        Hệ thống . ra ngoài . println ( " Nhap giay: " );
        giay = quét . nextInt ();
    }
     void  xuat () {
        Hệ thống . ra ngoài . println ( " Gia tri thoi gian: " + gio + " giờ, " + phut +  " minutes " + giay + " second " );
    }
  
    void  hamchuyen () {
        giây = gio * 3600  + phut * 60  + giay;
